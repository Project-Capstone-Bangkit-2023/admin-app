<h3>Tourisms List</h3>

<div class="card">
  <div class="card-body">
    <table class="table table-bordered data-table">
      <thead>
        <tr>
          <th>#</th>
          <th>Nama</th>
          <th>Alamat</th>
          <th>Kategori</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        {{#each tourisms}}
          <tr>
            <td>{{@index}}</td>
            <td>{{ this.name }}</td>
            <td>{{ this.city }}</td>
            <td>{{ this.category }}</td>
            <td>{{ this.rating }}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>