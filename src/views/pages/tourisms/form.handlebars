<h3>Edit Tourism</h3>

<div class="row">
  <div class="col-md-12 col-lg-6 col-sm-12">
    <div class="card">
      <div class="card-body">
        <form
          action="/tourisms/edit/{{tourism.id}}"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group mb-3">
            <label for="">Place Name </label>
            <input
              type="text"
              class="form-control"
              placeholder="Enter place name"
              name="name"
              required
              value="{{tourism.name}}"
            />
          </div>
          <div class="form-group mb-3">
            <label for="">Image</label>
            <input
              type="file"
              class="form-control"
              placeholder=""
              name="file"
            />
          </div>
          <div class="form-group mb-3">
            <label for="">Description</label>
            <textarea
              class="form-control"
              name="description"
              id=""
              cols="30"
              rows="10"
              required
            >{{tourism.description}}</textarea>
          </div>
          <div class="form-group mb-3">
            <label for="">Category</label>
            <input
              type="text"
              class="form-control"
              placeholder="Enter place name"
              name="category"
              required
              value="{{tourism.category}}"
            />
          </div>
          <div class="form-group mb-3">
            <label for="">City</label>
            <input
              type="text"
              class="form-control"
              placeholder="Enter city"
              name="city"
              required
              value="{{tourism.city}}"
            />
          </div>
          <div class="form-group mb-3">
            <label for="">Price</label>
            <input
              type="number"
              class="form-control"
              placeholder="Masukkan price"
              name="price"
              required
              value="{{tourism.price}}"
            />
          </div>
          <div class="form-group mb-3">
            <label for="">Coordinate</label>
            <div class="row">
              <div class="col-6">
                <div class="form-group">
                  <label for="latitude">Latitude</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Enter latitude"
                    name="latitude"
                    id=""
                    required
                    value="{{tourism.latitude}}"
                  />
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label for="longitude">Longitude</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Enter longitude"
                    name="longitude"
                    id=""
                    required
                    value="{{tourism.longitude}}"
                  />
                </div>
              </div>
            </div>
          </div>
          <a href="/tourisms" class="btn btn-secondary">Back</a>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </form>
      </div>
    </div>
  </div>
</div>